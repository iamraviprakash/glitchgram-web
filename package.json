{
  "name": "glitchgram",
  "version": "1.0.0",
  "description": "A glitchy clone of telegram",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint --quiet src --ext .js,.jsx",
    "precommit": "git rev-parse -q --no-revs --verify MERGE_HEAD || bash lint-staged"
  },
  "author": "iamraviprakash",
  "license": "ISC",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.0.7",
    "eslint": "^8.4.1",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.1",
    "git-hooks": "^1.1.10",
    "prettier": "2.5.1",
    "vite": "^2.7.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,md}": [
      "eslint --fix --quiet --ext js,jsx",
      "prettier --write"
    ]
  }
